#!/usr/bin/env bash
set -ex

# Retrieve the latest container tarball generated by Batsim's CI.
# This container should be minimal and generated by Nix.
curl -kL -o ./batsim-docker-latest.tar.gz "https://framagit.org/batsim/batsim/-/jobs/artifacts/master/raw/batsim-docker-latest.tar.gz?job=build_and_test"
file ./batsim-docker-latest.tar.gz # just to make sure we have downloaded a tarball, not an html page or some other stuff.

# Instead of building the container, just load it into docker.
docker load -i ./batsim-docker-latest.tar.gz
